<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="false"
    tools:context="com.zielinski.kacper.carquiz.SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/QuestionTextViewStyle"
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="question"   />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/question_image"
            android:scaleType="fitCenter" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:checkedButton="@id/radio_answer1"
            android:orientation="vertical">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/radio_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer1" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/radio_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer2" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/radio_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer3" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/radio_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer4" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/checkbox_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/checkbox_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer1" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/checkbox_answer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer2" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/checkbox_answer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer3" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/checkbox_answer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="answer4" />

        </LinearLayout>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="64dp"
            android:inputType="text"
            android:singleLine="true" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:padding="16dp"
            android:text="@android:string/ok"
            android:textAllCaps="true" />

    </LinearLayout>
</ScrollView>