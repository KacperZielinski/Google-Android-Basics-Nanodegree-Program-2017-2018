<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:onClick">onCheckboxClicked</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:onClick">onRadioButtonClicked</item>
    </style>

    <style name="QuestionTextViewStyle">
        <item name="android:layout_margin">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageViewRelativeStyle">
        <item name="android:contentDescription">@string/question_image</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/radio_group</item>
        <item name="android:layout_below">@id/question_text</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
